<h1>Добавление свойства связи</h1>
<%= form_tag('createprop') do -%>

    <p>
      <%= label_tag 'ID связи' %><br />
      <%= text_field_tag 'idRelation', nil, :class => "input-field" %>
    </p>

    <p>
      <%= label_tag 'Тип свойства' %><br />
      <%= select_tag('propType', options_for_select([['Вес', 'weight']], 1), :class => "input-field") %>
    </p>

    <p>
      <%= label_tag 'Значение свойства' %><br />
      <%= text_field_tag "propValue", nil, :class => "input-field" %>
    </p>

    <p>
      <%= submit_tag "Сохранить" %>
    </p>

<% end -%>