<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div id="authForm-container" class="signForm">
      <div class="authForm-header">
        <div class="authForm-title">Вход в систему</div>
        <div class="authForm-alterAction">|&nbsp;&nbsp;<%= link_to "Регистрация", new_registration_path(resource_name) %></div>
      </div>
      <div class="clearBoth paddingBottom17px"></div>
      <div class="authForm-fields">
        <div class="field-Row">
          <div class="field-Label">Адрес email</div>
          <div class="field"><%= f.email_field :email, :size => "30", :class => "input-defaultField" %></div>
          <div class="field-advInfo"></div>
        </div>
        <div class="clearBoth"></div>
        <div class="field-Row">
          <div class="field-Label">Пароль</div>
          <div class="field"><%= f.password_field :password, :size => "30", :class => "input-defaultField" %></div>
          <div class="field-advInfo">|&nbsp;&nbsp;
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
                <%= link_to "Забыли пароль?", new_password_path(resource_name) %><br />
            <% end -%>
          </div>
        </div>
      </div>
      <div class="clearBoth"></div>
      <div class="authForm-button">
        <% if devise_mapping.rememberable? -%>
            <!--<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>-->
        <% end -%>
        <%= image_submit_tag("blue/forms/buttons/signin.png", :class => "signButton", :size => "91x42", :alt => "Войти в систему") %>
      </div>
    </div>
<% end %>